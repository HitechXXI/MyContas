#:kivy 1.1.0

Root:
    text_input: text_input

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            #size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()

        BoxLayout:
            TextInput:
                id: text_input
                text: ''

            RstDocument:
                text: text_input.text
                show_errors: True

# O CÓDIGO ABAIXO ABRE A CAIXA DE DIÁLOGO PARA ESCOLHA DO ARQUIVO .PDF
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)